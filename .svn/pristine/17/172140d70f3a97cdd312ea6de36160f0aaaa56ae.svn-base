body {
  padding: 50px;
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif;
}

a {
  color: #00B7FF;
}


fieldset {
  border-radius: 10px;
  box-shadow: 15px 15px 15px #D2D7D2
}

input, textarea {
  border-radius: 10px;
  background-color: rgba(210, 215, 210, 0.50); 
}

table#table1, table#table2, #table1 tr, #table1 td, #table2 tr, #table2 td{
	border-collapse:collapse;
    border: 1px solid black;
	width: 400px;
	height: 30px;
}

table#table1{
	float:left;
}
table#table2{
	float:right;
}

.placeShip{
   background-color: #37D06A;
}

.shipHit{
   background-color: #37D06A;
}

.shipMiss{
   background-color: #F50808;
}
